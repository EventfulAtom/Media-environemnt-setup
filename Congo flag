var canW = 300 // canvas width
var canH = 200 // canvas height

function setup() {
  createCanvas(canW, canH);
  background(251, 222, 74);
}

function draw() {
  noStroke()
  fill(0, 149, 67)
  triangle(0, 0, canW*(2/3), 0, 0, canH) // green triangle
  fill(220, 36, 31)
  triangle(canW, 0, canW,canH, canW*(1/3), canH) // red triangle
}